<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/roomNumberLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/new_post_common_padding"
        android:paddingTop="@dimen/new_post_common_padding">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/isItDuplexLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/new_post_common_padding"
        android:layout_marginTop="@dimen/new_post_common_padding"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/is_it_a_duplex"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/isItDuplex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/isItDuplexYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/isItDuplexNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:textColor="@color/black" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/approximate_total_space"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/totalSpace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/new_post_common_padding"
            android:layout_marginStart="@dimen/new_post_common_padding"
            android:layout_weight="1"
            android:ems="4"
            android:hint="@string/total_space"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:maxLines="1"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_10dp"
            android:layout_marginLeft="@dimen/new_post_common_padding"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_marginStart="@dimen/new_post_common_padding"
            android:text="@string/sq_ft"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/new_post_common_padding"
        android:layout_marginTop="@dimen/new_post_common_padding"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drawing_dining_facility"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/drawingDining"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/drawingDiningYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/drawingDiningNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:textColor="@color/black" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/new_post_common_padding"
        android:layout_marginTop="@dimen/new_post_common_padding"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/twentyFourWaterCB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/twenty_four_water"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/gasSupplyCB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/gas"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/new_post_common_padding"
        android:layout_marginTop="@dimen/new_post_common_padding"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/securityGuardCB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/security_guard"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/parkingGarageCB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/parking_garage"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/new_post_common_padding"
        android:layout_marginTop="@dimen/new_post_common_padding"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/liftCB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/lift"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/generatorCB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/generator"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/new_post_common_padding"
        android:layout_marginTop="@dimen/new_post_common_padding"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/wellFurnishedCB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/well_furnished"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/kitchenCabinetCB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/kitchen_cabinet"
            android:textColor="@color/black" />
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/ad_mob_banner_id">

    </com.google.android.gms.ads.AdView>
</LinearLayout>